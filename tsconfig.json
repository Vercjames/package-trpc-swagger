{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
